---
import BaseLayout from "@/layouts/BaseLayout.astro";

import Introduction from "@/components/Introduction.astro";
import SeoPage from "@/components/SeoPage.astro";

//imported from contact page 
import { SOCIAL_LINKS } from "@/siteConfig";

---

<BaseLayout class="dark-bg">
  <SeoPage slot="head" title="About" />
  <Introduction />
  <h2 class="mb-3 text-lg font-bold">Contact</h2>
  <ul class="grid list-none gap-2 p-0">
    {Object.keys(SOCIAL_LINKS).map((socialLinkKey) => {
      const socialLink = SOCIAL_LINKS[socialLinkKey];
      return (
        <li>
          <a href={socialLink.url} target="_blank" rel="noopener noreferrer">
            <i class={`fab fa-${socialLinkKey.toLowerCase()} fa-2x`} aria-hidden="true"></i>
          </a>
        </li>
      );
    })}
  </ul>
</BaseLayout>
